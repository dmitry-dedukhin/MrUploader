<UserControl x:Class="MrUploader.FileUploadControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    mc:Ignorable="d" d:DesignWidth="120" d:DesignHeight="25">
    <Grid x:Name="LayoutRoot">
		<Button Click="addFilesButton_Click" x:Name="BrowseButton" FontSize="12" Width="120" Height="25" Cursor="Hand"/>
		<Image MouseLeftButtonUp="addFilesButton_Click" x:Name="BrowseImage" Stretch="None" Cursor="Hand"/>
	</Grid>
</UserControl>
